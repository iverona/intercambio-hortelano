rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- Helper Functions ---
    function isSignedIn() {
      return request.auth != null;
    }
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    // Allow public read access to products and users for browsing
    match /products/{productId} {
      allow read: if true;
      // Require owner match on create and basic schema validation
      allow create: if isOwner(request.resource.data.userId)
                    && request.resource.data.name is string
                    && request.resource.data.description is string;
      // Require owner for update and prevent changing ownership
      allow update: if isOwner(resource.data.userId)
                    && (!request.resource.data.diff(resource.data).affectedKeys().hasAny(['userId']));
      allow delete: if isOwner(resource.data.userId);
    }

    match /users/{userId} {
      allow read: if true;
      // Strict creation: User UID must match Auth UID. 
      allow create: if isOwner(userId) 
                    && request.resource.data.uid == userId
                    && request.resource.data.name is string;
      
      // Only allow users to update their own profile
      allow update: if isOwner(userId) && request.resource.data.uid == userId;
      
      // Allow users to delete their own profile
      allow delete: if isOwner(userId);
    }

    // Secure the chats collection
    match /chats/{chatId} {
      // Allow read only if the user is a participant in the existing chat
      allow read: if isSignedIn() && request.auth.uid in resource.data.participants;
      
      // Allow update only if participant, and prevent modification of immutable fields
      allow update: if isSignedIn() 
                    && request.auth.uid in resource.data.participants
                    && request.resource.data.participants == resource.data.participants
                    && request.resource.data.listingId == resource.data.listingId;
      
      // Allow create only as part of an exchange (requires listingId context)
      allow create: if isSignedIn() 
                    && request.auth.uid in request.resource.data.participants
                    && request.resource.data.participants.size() == 2
                    && request.resource.data.listingId is string;

      // Secure the messages subcollection
      match /messages/{messageId} {
        // Allow read only if the user is a participant in the parent chat document
        allow read: if isSignedIn() && get(/databases/$(database)/documents/chats/$(chatId)).data.participants.hasAny([request.auth.uid]);
        // Allow create only if participant AND senderId matches auth uid (prevent spoofing)
        allow create: if isSignedIn() 
                      && get(/databases/$(database)/documents/chats/$(chatId)).data.participants.hasAny([request.auth.uid])
                      && request.resource.data.senderId == request.auth.uid
                      && request.resource.data.text is string;
        // Disallow updates and deletes to messages to maintain chat history integrity
        allow update, delete: if false;
      }
    }

    match /notifications/{notificationId} {
      // Only allow users to read their own notifications
      allow read: if isOwner(resource.data.recipientId);
      
      // Allow create if authenticated and sender matches auth (prevent spoofing)
      allow create: if isSignedIn() && 
        request.resource.data.recipientId != null &&
        request.resource.data.senderId == request.auth.uid; 

      // Allow update only if the user is the recipient (e.g. marking as read)
      allow update: if isOwner(resource.data.recipientId) && 
        request.resource.data.recipientId == resource.data.recipientId &&
        request.resource.data.senderId == resource.data.senderId &&
        request.resource.data.type == resource.data.type &&
        request.resource.data.entityId == resource.data.entityId &&
        request.resource.data.createdAt == resource.data.createdAt;
        
      // Allow recipients to delete their own notifications
      allow delete: if isOwner(resource.data.recipientId);
    }

    // Rules for exchanges collection
    match /exchanges/{exchangeId} {
      // Only allow read if user is the requester or owner (parties involved)
      allow read: if isSignedIn() &&
        (resource.data.requesterId == request.auth.uid || resource.data.ownerId == request.auth.uid);
      
      // Allow create if authenticated and requester is self
      allow create: if isSignedIn() && request.resource.data.requesterId == request.auth.uid;
      
      // Allow update if user is the requester or owner, AND identity/origin fields are immutable
      allow update: if isSignedIn() && 
        (resource.data.requesterId == request.auth.uid || 
         resource.data.ownerId == request.auth.uid)
        && (!request.resource.data.diff(resource.data).affectedKeys()
            .hasAny(['requesterId', 'ownerId', 'productId', 'productName', 'chatId', 'offer', 'createdAt']));
         
      // Allow delete if user is the owner
      allow delete: if isOwner(resource.data.ownerId);
    }
    // LOPD "Bloqueo" Compliance: Strictly deny all access to archived users
    // LOPD "Bloqueo" Compliance: Archived data is write-only for the owner during deletion.
    match /archived_users/{userId} {
      allow create, update: if isOwner(userId);
      allow read, delete: if false;
      
      match /products/{productId} {
         allow create, update: if isOwner(userId);
         allow read, delete: if false;
      }
    }
  }
}
